{
  "name": "spicezify-music-player",
  "version": "1.0.0",
  "description": "A Spotify-style Electron music player for local files with real-time features",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development electron-vite dev",
    "build": "electron-vite build",
    "build:electron": "npm run build && electron-builder",
    "preview": "electron-vite preview",
    "lint": "eslint .",
    "test": "vitest run",
    "start": "electron dist/main/index.js"
  },
  "keywords": [
    "electron",
    "music",
    "player",
    "local",
    "real-time",
    "chat"
  ],
  "author": "SPiceZify",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.45.4",
    "@tanstack/react-query": "^5.59.16",
    "better-sqlite3": "^11.3.0",
    "chokidar": "^4.0.1",
    "dotenv": "^17.2.1",
    "framer-motion": "^11.11.9",
    "howler": "^2.2.4",
    "lucide-react": "^0.344.0",
    "music-metadata": "^10.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "socket.io-client": "^4.8.1",
    "sonner": "^1.7.1",
    "uuid": "^11.1.0",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config": "^1.0.2",
    "@electron-toolkit/utils": "^3.0.0",
    "@eslint/js": "^9.9.1",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.7.9",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^32.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^2.1.2"
  },
  "build": {
    "appId": "com.spicezify.musicplayer",
    "productName": "SPiceZify",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
